{%  extends "base.html.twig" %}

{% block title property.title %}

    {% block body %}

        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">

                    </div>
                    <div class="col-md-4">
                        <h1>{{ property.title }}</h1>
                        <h2>{{ property.rooms }} pièces . {{ property.surface }} m2</h2>
                        <div class="text-primary" style="font-weight: bold; font-size: 4rem">{{ property.formatedPrice }} €</div>
                        <a href="#" class="btn btn-primary">Contacter l'agence</a>
                    </div>
                </div>
            </div>
        </div>
                        
        <div class="container mt-4">
            <p>
                {{ property.description | nl2br }}
            </p>

            <div class="row">
                <div class="col-md-8">
                    <h2>Caractéristiques</h2>
                    <table class="table table-striped">
                        <tr>
                            <td>Surface habitable</td>
                            <td>{{ property.surface }} m2</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td>{{ property.rooms }} m2</td>
                        </tr>
                        <tr>
                            <td>Surface habitable</td>
                            <td>{{ property.surface }} m2</td>
                        </tr>
                        <tr>
                            <td>Chambres</td>
                            <td>{{ property.bedRooms }} m2</td>
                        </tr>
                        <tr>
                            <td>Etage</td>
                            <td>{{ property.floor }} m2</td>
                        </tr>
                        <tr>
                            <td>Chauffage</td>
                            <td>{{ property.heatType }} m2</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4">
                    <h2>Spécificités</h2>
                </div>
            </div>

        {% endblock %}
