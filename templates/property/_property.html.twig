<div class="card mb-4">
    {% if property.filename %}
        <img src="/images/properties/{{ property.filename }}" alt="card-img-top" style="width: 100%; height: auto;">
        <!--img src="{{ asset('images/properties/' ~ property.filename) }}" alt="card-img-top" style="width: 100%; height: auto;"-->
        <!--img src="{{ asset(vich_uploader_asset(property, 'imageFile')) }}" alt="card-img-top" style="width: 100%; height: auto;"-->
        
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">
            {{ property.city }} ({{ property.postalCode }})
        </p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
            {{ property.formatedPrice }} â‚¬
        </div>
    </div>
</div>